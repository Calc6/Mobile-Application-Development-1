<?xml version="1.0" encoding="utf-8"?>

<!--layout for team list screen -->

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TeamListActivity">

    <!-- Top bar that shows the screen title -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:fitsSystemWindows="true"
        app:elevation="0dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Top bar that shows title -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Team Manager"
            app:titleTextColor="@color/colorPrimary" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- RecyclerView used to show the list of teams -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- Frame that holds the buttons-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|end"
        android:padding="16dp">

        <!--fab for searching-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="160dp"
            android:contentDescription="Search teams"
            app:srcCompat="@android:drawable/ic_menu_search"
            app:tint="@color/light_yellow"
            app:backgroundTint="@color/dark_green" />

        <!--fab for deleting-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabDeleteAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="88dp"
            android:layout_marginEnd="0dp"
            android:contentDescription="Delete all teams"
            app:srcCompat="@android:drawable/ic_menu_delete"
            app:tint="@color/light_yellow"
            app:backgroundTint="@color/dark_green" />

        <!--fab for adding team-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="16dp"
            android:contentDescription="Add new team"
            app:srcCompat="@android:drawable/ic_input_add"
            app:tint="@color/light_yellow"
            app:backgroundTint="@color/forest_green" />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
